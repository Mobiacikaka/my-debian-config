# Numeric workspace #
# switch to workpace with numeric keyboard
bindsym $mod+Mod2+KP_1 workspace _1
bindsym $mod+Mod2+KP_2 workspace _2
bindsym $mod+Mod2+KP_3 workspace _3
bindsym $mod+Mod2+KP_4 workspace _4
bindsym $mod+Mod2+KP_5 workspace _5
bindsym $mod+Mod2+KP_6 workspace _6
bindsym $mod+Mod2+KP_7 workspace _7
bindsym $mod+Mod2+KP_8 workspace _8
bindsym $mod+Mod2+KP_9 workspace _9
bindsym $mod+Mod2+KP_0 workspace _10

# move focused container to workspace with numpad
bindsym $mod+Shift+Mod2+KP_1 move container to workspace _1
bindsym $mod+Shift+Mod2+KP_2 move container to workspace _2
bindsym $mod+Shift+Mod2+KP_3 move container to workspace _3
